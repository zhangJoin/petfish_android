<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="rootviewhorizontal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="rootviewvertical" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="rootsearchlinearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@drawable/shape_search_btn</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="rootlinearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
    </style>

    <style name="roottextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_black_color</item>
    </style>

    <style name="roottextviewshow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_normal_color</item>
    </style>

    <style name="rootrefresh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:divider">#19000000</item>
        <item name="android:background">@color/white</item>
        <item name="android:dividerHeight">@dimen/dp_1</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="textsearchview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/tv_all</item>
    </style>

    <style name="imagesearchview">
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="image_item">
        <item name="android:layout_height">@dimen/dp_70</item>
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@mipmap/noimage</item>
    </style>

    <style name="textview_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#9c9c9c</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
    </style>

    <style name="textview_item1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:layout_alignParentTop">@dimen/dp_5</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
    </style>

    <style name="home_group">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="home_titleright">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@mipmap/title_right</item>
    </style>

    <style name="home_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@mipmap/title_back</item>
    </style>

    <style name="showdetailtextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lineSpacingExtra">@dimen/dp_3</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_normal_color</item>
    </style>
    <style name="NormalTextView">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalGreyTextView">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallGreyTextView">
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
