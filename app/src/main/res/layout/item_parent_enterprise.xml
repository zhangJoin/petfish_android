<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_img_parent"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/noimage" />

    <TextView
        android:id="@+id/tv_title_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_img_parent"
        android:layout_alignTop="@+id/iv_img_parent"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_normal_color"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="" />
    <TextView
        android:id="@+id/tv_phone_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_img_parent"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_14"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_small_color"
        android:text="" />
    <TextView
        android:id="@+id/tv_address_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_img_parent"
        android:layout_alignBottom="@+id/iv_img_parent"
        android:textSize="@dimen/sp_14"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/text_small_color"
        android:text="" />
    <View
        style="@style/rootviewhorizontal">
    </View>
</RelativeLayout>