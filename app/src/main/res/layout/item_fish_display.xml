<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_img_display"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_70"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:padding="@dimen/dp_5"
        android:scaleType="fitXY"
        android:src="@mipmap/noimage" />

    <TextView
        android:id="@+id/tv_date_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img_display"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toEndOf="@+id/iv_img_display"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#9c9c9c"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_title_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_img_display"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_img_display"
        android:layout_toRightOf="@id/iv_img_display"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>