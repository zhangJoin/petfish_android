<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_background_color"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_pop1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="产品类别"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <View style="@style/rootviewhorizontal" />

            <LinearLayout
                android:id="@+id/ll_pop_variety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pop_variety_all"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="全部"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/sp_14" />

                <com.gage.petfish_android.ui.view.MyGridView
                    android:id="@+id/gv_variety"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_20"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:horizontalSpacing="5dp"
                    android:scrollbars="none"></com.gage.petfish_android.ui.view.MyGridView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_pop2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="产品材质"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <View style="@style/rootviewhorizontal" />

            <LinearLayout
                android:id="@+id/ll_pop_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pop_material_all"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="全部"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/sp_14" />

                <com.gage.petfish_android.ui.view.MyGridView
                    android:id="@+id/gv_material"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:paddingRight="@dimen/dp_20"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"></com.gage.petfish_android.ui.view.MyGridView>
            </LinearLayout>


            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/themeColor"
                    android:text="搜索"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="重置"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/themeColor"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:text="重置"
            android:textColor="@color/text_normal_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>
