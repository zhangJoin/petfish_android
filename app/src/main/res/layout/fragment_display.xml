<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_display"
        style="@style/rootsearchlinearlayout">

        <TextView
            android:id="@+id/tv_display"
            style="@style/textsearchview" />

        <View style="@style/rootviewvertical"></View>

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:background="@null"
            android:layout_height="match_parent"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_selector1" />
    </LinearLayout>

    <com.gage.petfish_android.view.RefreshLoadListView
        android:id="@+id/rv_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#19000000"
        android:dividerHeight="1dp"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:scrollbars="none"
        android:smoothScrollbar="true" />
    <TextView
        android:id="@+id/tv_show_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="查询结果为空"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>
