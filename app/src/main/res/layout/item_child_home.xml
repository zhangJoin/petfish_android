<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_img_child"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/noimage" />
        <TextView
            android:id="@+id/tv_title_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img_child"
            android:layout_alignTop="@+id/iv_img_child"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_normal_color"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="选购水族箱"/>
        <TextView
            android:id="@+id/tv_date_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img_child"
            android:layout_alignBottom="@+id/iv_img_child"
            android:textSize="@dimen/sp_14"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_small_color"
            android:text="20170911 11:00"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_img_company"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/a01" />
        <TextView
            android:id="@+id/tv_title_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img_company"
            android:layout_alignTop="@+id/iv_img_company"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_normal_color"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="选购水族箱"/>
        <TextView
            android:id="@+id/tv_date_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img_company"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_14"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/text_small_color"
            android:text="20170911 11:00"/>
        <TextView
            android:id="@+id/tv_address_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img_company"
            android:layout_alignBottom="@+id/iv_img_company"
            android:textSize="@dimen/sp_14"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/text_normal_color"
            android:text="地址:天津市"/>
    </RelativeLayout>
    <View
        style="@style/rootviewhorizontal">
    </View>
</RelativeLayout>