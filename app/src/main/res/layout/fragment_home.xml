<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
 </android.support.v4.widget.SwipeRefreshLayout>-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/iv_first"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="天津观赏鱼之家 — 带你走进观赏鱼世界"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/sp_16" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_show"
                    style="@style/home_image"
                    android:src="@mipmap/zs"
                    />

                <ImageView
                    android:id="@+id/iv_info"
                    style="@style/home_image"
                    android:src="@mipmap/zx" />

                <ImageView
                    android:id="@+id/iv_breed"
                    style="@style/home_image"
                    android:src="@mipmap/yz" />

                <ImageView
                    android:id="@+id/iv_treat"
                    style="@style/home_image"
                    android:src="@mipmap/jbyf" />

                <ImageView
                    android:id="@+id/iv_company"
                    style="@style/home_image"
                    android:src="@mipmap/qy" />
            </LinearLayout>

            <View style="@style/rootviewhorizontal"></View>

            <LinearLayout
                android:id="@+id/ll_show"
                style="@style/home_linearlayout">

                <TextView
                    style="@style/home_group"
                    android:text="观赏鱼展示"
                    android:textColor="@color/themeColor" />

                <ImageView
                    style="@style/home_titleright"
                    android:layout_width="wrap_content" />
            </LinearLayout>

            <com.gage.petfish_android.widget.CustomExpandableListView
                android:id="@+id/lv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"></com.gage.petfish_android.widget.CustomExpandableListView>

            <View style="@style/rootviewhorizontal"></View>

            <LinearLayout
                android:id="@+id/ll_info"
                style="@style/home_linearlayout">

                <TextView
                    style="@style/home_group"
                    android:layout_width="350dp"
                    android:text="观赏鱼资讯"
                    android:textColor="@color/green" />

                <ImageView style="@style/home_titleright" />
            </LinearLayout>

            <com.gage.petfish_android.widget.CustomExpandableListView
                android:id="@+id/lv_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"></com.gage.petfish_android.widget.CustomExpandableListView>

            <View style="@style/rootviewhorizontal"></View>

            <LinearLayout
                android:id="@+id/ll_breed"
                style="@style/home_linearlayout">

                <TextView
                    style="@style/home_group"
                    android:text="观赏鱼养殖"
                    android:textColor="@color/orange" />

                <ImageView style="@style/home_titleright" />
            </LinearLayout>

            <com.gage.petfish_android.widget.CustomExpandableListView
                android:id="@+id/lv_breed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"></com.gage.petfish_android.widget.CustomExpandableListView>

            <View style="@style/rootviewhorizontal"></View>

            <LinearLayout
                android:id="@+id/ll_treat"
                style="@style/home_linearlayout">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/home_group"
                    android:text="观赏鱼疾病预防"
                    android:textColor="@color/red" />

                <ImageView style="@style/home_titleright" />
            </LinearLayout>

            <com.gage.petfish_android.widget.CustomExpandableListView
                android:id="@+id/lv_treat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"></com.gage.petfish_android.widget.CustomExpandableListView>

            <View style="@style/rootviewhorizontal"></View>

            <LinearLayout
                android:id="@+id/ll_company"
                style="@style/home_linearlayout">

                <TextView
                    style="@style/home_group"
                    android:text="观赏鱼企业"
                    android:textColor="@color/themeColor" />

                <ImageView style="@style/home_titleright" />
            </LinearLayout>

            <com.gage.petfish_android.widget.CustomExpandableListView
                android:id="@+id/lv_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"></com.gage.petfish_android.widget.CustomExpandableListView>

            <View style="@style/rootviewhorizontal"></View>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
