<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/ic_title"
        layout="@layout/common_title"></include>

    <ScrollView
        android:layout_below="@id/ic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:focusable="true"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="@dimen/dp_3"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/text_normal_color"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_variety"
                style="@style/showdetailtextview" />

            <TextView
                android:id="@+id/tv_hibit"
                style="@style/showdetailtextview" />

            <TextView
                android:id="@+id/tv_introduction"
                style="@style/showdetailtextview" />

            <TextView
                android:id="@+id/tv_methods"
                style="@style/showdetailtextview" />

            <TextView
                android:id="@+id/tv_picture"
                style="@style/showdetailtextview" />

            <GridView
                android:id="@+id/gv_showdetail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:numColumns="3"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:horizontalSpacing="@dimen/dp_5"
                android:verticalSpacing="@dimen/dp_10" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>